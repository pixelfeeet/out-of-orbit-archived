package {
	
	import net.flashpunk.World;
	import net.flashpunk.graphics.Tilemap;
	
	public class Level extends World {
		private var tiles:Tilemap;
		[Embed(source = 'assets/tileset.png')] private const TILESET:Class;
		
		public function Level() {
			
			tiles = new Tilemap(TILESET, 640, 480, 32, 32);
			graphic = tiles;
			add(new Player());
			add(new Cursor());
			
		}
	}
	
}